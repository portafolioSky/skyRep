        <GroupBox x:Name="groupBox3" Header="Ingresar Pilotos" HorizontalAlignment="Left" Margin="26,10,0,0" Grid.Row="2" VerticalAlignment="Top" Height="304" Width="453"/>
        <Label x:Name="labelHorasDespegue"  HorizontalAlignment="Left" Margin="370,157,0,0" Grid.Row="2" VerticalAlignment="Top" FontWeight="Medium" Foreground="#FF7D84CB" Height="10" Width="10"/>
        <Label x:Name="labelHoraArribo"  HorizontalAlignment="Left" Margin="370,219,0,0" Grid.Row="2" VerticalAlignment="Top" FontWeight="Medium" Foreground="#FF7D84CB" Height="10" Width="10"/>
        <Label  Content="Rut piloto:" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top" Height="26" Width="93" Margin="39,38,0,0"/>
        <Label  Content="Nombre piloto:" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top" Height="26" Width="93" Margin="39,67,0,0"/>
        <Label  Content="Apellido Paterno:" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top" Height="26" Width="175" Margin="39,97,0,0"/>
        <Label  Content="Apellido Materno:" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top" Height="26" Width="175" Margin="39,125,0,0"/>
        <Label  Content="Correo (E-Mail):" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top" Height="26" Width="93" Margin="39,156,0,0"/>
        <TextBox x:Name="textBoxRut" HorizontalAlignment="Left" Height="23" Margin="241,41,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="176"/>
        <TextBox x:Name="textBoxNombre" HorizontalAlignment="Left" Height="23" Margin="241,70,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="176"/>
        <TextBox x:Name="textBoxAPaterno" HorizontalAlignment="Left" Height="23" Margin="241,100,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="176"/>
        <TextBox x:Name="textBoxAMaterno" HorizontalAlignment="Left" Height="23" Margin="241,129,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="176"/>
        <TextBox x:Name="textBoxCorreo" HorizontalAlignment="Left" Height="23" Margin="241,159,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="176"/>
        <Label  Content="Fecha Venc Medicina Aeroespacial:" HorizontalAlignment="Left" Margin="39,188,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <Label  Content="Tipo Licencia:" HorizontalAlignment="Left" Margin="39,216,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <Label  Content="Fecha Emision:" HorizontalAlignment="Left" Margin="39,248,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <Label  Content="Fecha Vencimiento:" HorizontalAlignment="Left" Margin="39,277,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <DatePicker HorizontalAlignment="Left" Margin="241,189,0,0" Grid.Row="2" VerticalAlignment="Top" Width="176"/>
        <DatePicker HorizontalAlignment="Left" Margin="241,248,0,0" Grid.Row="2" VerticalAlignment="Top" Width="176"/>
        <DatePicker HorizontalAlignment="Left" Margin="241,277,0,0" Grid.Row="2" VerticalAlignment="Top" Width="176"/>
        <ComboBox x:Name="comboBoxTipoLicencia" HorizontalAlignment="Left" Margin="241,219,0,0" Grid.Row="2" VerticalAlignment="Top" Width="176"/>
        <Button x:Name="buttonAceptar" Content="Aceptar" HorizontalAlignment="Left" Margin="223,342,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
