                <DataGridTemplateColumn Header="Seleccion">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button  Click="ChangeText" Background="#FF33588D" Foreground="white" Focusable="False" Content="Seleccionar"/>
